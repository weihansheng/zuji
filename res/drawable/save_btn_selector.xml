<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
     <item
		android:state_pressed="false" >
	    <shape >
		  <gradient android:angle="270" 
		      android:endColor="#40a3ff" 
		      android:startColor="#40a3ff" />
		<corners 
		    android:bottomRightRadius="3dp"
			android:bottomLeftRadius="3dp" 
			android:topLeftRadius="3dp"
			android:topRightRadius="3dp" />
		<padding 
		    android:left="25dip" 
		    android:right="25dip"
		    android:bottom="8dip"
		    android:top="8dip"
		    />
		</shape>
	</item>
	<item
		android:state_pressed="true" >
		<shape >
		  <gradient android:angle="270" 
		      android:endColor="#378cdb" 
		      android:startColor="#378cdb" />
		<corners 
		    android:bottomRightRadius="3dp"
			android:bottomLeftRadius="3dp" 
			android:topLeftRadius="3dp"
			android:topRightRadius="3dp" />
		</shape>
		<padding 
		    android:left="25dip" 
		    android:right="25dip"
		    android:bottom="8dip"
		    android:top="8dip"
		    />
	</item>
</selector>